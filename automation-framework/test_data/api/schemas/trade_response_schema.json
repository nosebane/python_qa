{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Indodax Trade Response Schema",
  "type": "object",
  "properties": {
    "return": {
      "type": "object",
      "properties": {
        "order_id": {
          "type": ["string", "integer"],
          "description": "Unique order identifier"
        },
        "type": {
          "type": "string",
          "enum": ["buy", "sell"],
          "description": "Order type"
        },
        "pair": {
          "type": "string",
          "description": "Trading pair (e.g., btc_idr)"
        },
        "price": {
          "type": "number",
          "description": "Order price"
        },
        "amount": {
          "type": "number",
          "description": "Order amount"
        },
        "status": {
          "type": "string",
          "description": "Order status"
        }
      },
      "required": ["order_id", "type", "pair", "price", "amount"],
      "additionalProperties": true
    },
    "success": {
      "type": "integer",
      "enum": [1],
      "description": "Success indicator"
    }
  },
  "required": ["return", "success"],
  "additionalProperties": false
}
